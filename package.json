{
  "name": "serverless-image-converter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only ./src/index.local.ts",
    "compile": "tsc",
    "build:lambda": "yarn install && yarn compile && rm -rf ./node_modules && yarn install --prod && cp -r ./node_modules ./dist/node_modules && (cd dist; zip -r ../lambda.zip .) && rm -rf ./dist",
    "test": "jest --watchAll --detectOpenHandles --no-cache"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/joi": "^17.2.3",
    "@types/node": "^14.14.25",
    "@types/sharp": "^0.27.1",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "roots": [
      "./src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "engines": {
    "node": ">=10.x <=12.x"
  },
  "dependencies": {
    "aws-sdk": "^2.873.0",
    "file-type": "^16.2.0",
    "joi": "^17.4.0",
    "sharp": "^0.27.1",
    "url-parse": "^1.4.7",
    "uuid": "^8.3.2"
  }
}
